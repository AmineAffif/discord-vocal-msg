{
  "manifest_version": 3,
  "name": "Discord audio messages",
  "version": "1.0",
  "description": "Adds a üéôÔ∏è button to record and send audio messages on Discord.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://discord.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Discord vocal - Plans & Features"
  },
  "content_scripts": [
    {
      "matches": ["https://discord.com/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}
