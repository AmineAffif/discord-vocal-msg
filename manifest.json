{
  "manifest_version": 3,
  "name": "Discord Vocaux (V1)",
  "version": "1.0",
  "description": "Ajoute un bouton 🎙️ pour enregistrer et envoyer des messages vocaux sur Discord.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://discord.com/*"],
  "content_scripts": [
    {
      "matches": ["https://discord.com/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}
